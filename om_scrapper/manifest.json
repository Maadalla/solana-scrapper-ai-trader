{
    "manifest_version": 3,
    "name": "Axiom WebSocket Spy",
    "version": "5.0",
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "alarms"
    ],
    "host_permissions": [
        "*://*.axiom.trade/*",
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://axiom.trade/*"
            ],
            "js": [
                "spy.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "*://axiom.trade/*"
            ],
            "js": [
                "bridge.js"
            ],
            "run_at": "document_start",
            "world": "ISOLATED"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}